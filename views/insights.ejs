<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <link rel="stylesheet" type="text/css" href="/css/insights_styles.css">
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <title>Insights</title>
</head>

<script>
    $(document).ready(() => {
            document.getElementById("pageheader").textContent="INSIGHTS";

        })
</script>

<body>
    <%- include('nav.ejs') %>

    <div class="container insights-box">

        <% insights.forEach(insight => { %>

        <div class="insight-post">
          <a class="link" href="/profile/<%=insight.username %>"><h6>@<%= insight.username %></h6></a>
          <div class="insight">
              <h4><%- insight.title %></h4>
              <p class="text"><%- insight.text %></p>
              <p class="date"><%- insight.date %></p>
          </div>
        </div>

        <% }) %>

    </div>

</body>

</html>